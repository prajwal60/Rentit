<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bag1">

    <TextView
        android:id="@+id/signupText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:gravity="center"

        android:text="Sign Up"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_below="@+id/signupText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="142dp"
        app:srcCompat="@drawable/user" />

    <EditText
        android:id="@+id/name"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/nameImage"
        android:layout_width="63dp"
        android:layout_height="56dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"

        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="29dp"
        android:layout_toStartOf="@+id/name"
        app:srcCompat="@drawable/name" />

    <EditText
        android:id="@+id/email"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone" />

    <ImageView
        android:id="@+id/imgph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageEmail"
        android:layout_alignParentStart="true"

        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="35dp"
        android:layout_toStartOf="@+id/phone"
        app:srcCompat="@android:drawable/stat_sys_phone_call_forward" />

    <EditText
        android:id="@+id/password"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imagepw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgGender"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="29dp"
        android:layout_toStartOf="@+id/password"
        app:srcCompat="@drawable/password" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="wrap_content"
        android:layout_below="@id/location"
        android:layout_marginStart="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="103dp"
        android:text="Signup" />

    <ImageView
        android:id="@+id/imgGender"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="31dp"
        android:layout_toStartOf="@+id/gender"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:hint="Gender"
        android:inputType="phone" />

    <ImageView
        android:id="@+id/imageEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="27dp"
        android:layout_toStartOf="@+id/email"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <EditText
        android:id="@+id/location"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="41dp"
        android:hint="Location" />

    <ImageView
        android:id="@+id/imglocation"
        android:layout_width="63dp"
        android:layout_height="42dp"
        android:layout_below="@+id/imagepw"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:layout_toStartOf="@+id/location"
        android:src="@android:drawable/ic_menu_mylocation" />


</RelativeLayout>