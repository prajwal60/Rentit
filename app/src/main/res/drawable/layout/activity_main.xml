<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bag2"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/pleaselogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="LOG IN"
        android:textColor="#E5EA4F"
        android:textSize="30sp"
        app:autoSizeTextType="none" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="81dp"
        android:layout_below="@+id/pleaselogin"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="165dp"

        android:layout_marginTop="59dp"
        android:layout_marginEnd="163dp"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/errormessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pleaselogin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:textColor="#ff0000"
        android:textSize="20sp"
        app:autoSizeTextType="none" />

    <ImageView
        android:id="@+id/imguser"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:layout_below="@+id/errormessage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/email"
        android:gravity="center"
        android:text="Username :"
        android:textColor="#F6F6F4"
        android:textSize="18sp"
        app:srcCompat="@drawable/name" />

    <CheckBox
        android:id="@+id/rememberme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginLeft="17dp"

        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/imgpw"
        android:text=" Remember Me"
        android:textColor="#FAF7F7" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/rememberme"
        android:layout_toRightOf="@id/rememberme"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15sp"
        android:onClick="validation"
        android:text="Login"
        android:textColorLink="#64CEF1" />

    <TextView
        android:id="@+id/noaccounttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_marginStart="157dp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="31dp"
        android:text="No Account?"
        android:clickable="true"
        android:textColor="#F6F3F3"
        android:textSize="18sp" />

    <Button
        android:id="@+id/noaccount"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:layout_below="@+id/noaccounttext"
        android:layout_marginTop="17sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:text="Register"
        android:textColor="#05532D" />

    <TextView
        android:id="@+id/forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/noaccount"
        android:layout_alignParentBottom="true"
        android:text=" "
        android:clickable="true"
        android:textColor="#A81F1F"
        android:textSize="18sp"
        tools:textAlignment="center" />


    <ImageView
        android:id="@+id/imgpw"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_below="@+id/imguser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/password"
        app:srcCompat="@android:drawable/ic_lock_idle_lock" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="73dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="73dp"
        android:ems="10"
        android:hint="Username" />


</RelativeLayout>