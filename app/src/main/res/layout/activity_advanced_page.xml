<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp"
    tools:context=".AdvancedPage">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:id="@+id/bookingsection"
        android:layout_marginTop="@dimen/headerTextSize"
        android:background="@color/grey_default">

        <TextView
            android:id="@+id/bookinginstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/newsMoreTextSize"
            android:text="Paste the booking code \n                and\n press the 'Book' button"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/bookinginstruction"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/receivecodeforbookingroom"
                android:layout_height="57sp"
                android:layout_width="match_parent"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:hint="Enter Booking Code"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="20sp" />

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/bookRoom"
                style="@style/loginButton"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/receivecodeforbookingroom"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:onClick="bookRoom"
                android:text="Book" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/advancebuttons"
        android:layout_below="@+id/bookingsection"
        android:layout_marginTop="@dimen/headerTextSize"
        android:background="@color/grey_default">

        <TextView
            android:id="@+id/updateanddeletetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/newsMoreTextSize"
            android:text="You can Update/Delete \nany post from here"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="25sp" />

        <RelativeLayout
            android:id="@+id/updateanddelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updateanddeletetext"
            android:gravity="center">

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/update"
                style="@style/loginButton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:onClick="updateThisPost"
                android:text="Update" />

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/delete"
                style="@style/loginButton"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7sp"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_toRightOf="@+id/update"
                android:onClick="deleteThisRoomPost"
                android:text="Delete" />

        </RelativeLayout>




