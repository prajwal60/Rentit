<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D7E0E1"
            android:paddingTop="10sp">


            <TextView
                android:id="@+id/Post_Code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your posted room of code :-"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Post_Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/Post_Code_text"
                android:textColor="#1133B3"
                android:textSize="25sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/booked_by_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Post_Code"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:layout_marginTop="10sp"
                android:text="is booked by:-"
                android:textSize="21sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/booked_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/booked_by_text"
                android:textColor="#1133B3"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textStyle="italic"
                android:layout_marginBottom="7sp"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="8sp"

            />

    </LinearLayout>


</RelativeLayout>