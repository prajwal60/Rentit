            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/headerTextSize">

                <TextView
                    android:id="@+id/posted_by_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:text="Owner :"
                    android:textColor="@android:color/widget_edittext_dark"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/propertyowner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7sp"
                    android:layout_toRightOf="@+id/posted_by_text"
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/propertyphoto"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:src="@drawable/ic_search_hero"
                android:paddingLeft="8sp"
                android:paddingRight="8sp"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="@dimen/cardview_default_elevation">

                <TextView
                    android:id="@+id/propertyownercontacttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number :"
                    android:textSize="20sp"
                    android:textColor="@android:color/widget_edittext_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/propertyownercontact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7sp"
                    android:layout_toRightOf="@+id/propertyownercontacttext"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp">

                <TextView
                    android:id="@+id/propertylocationtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Location :"
                    android:textColor="@android:color/widget_edittext_dark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/propertylocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7sp"
                    android:layout_toRightOf="@id/propertylocationtext"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10sp">

                <TextView
                    android:id="@+id/propertydescriptiontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/widget_edittext_dark"
                    android:text="Description :"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/propertydescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7sp"
                    android:layout_toRightOf="@+id/propertydescriptiontext"
                    android:textSize="20sp" />

